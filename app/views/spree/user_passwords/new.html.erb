<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
<div class="ordr-smry">
  <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12" id="forgot-password">
    <div class="ordr-txt"><%= Spree.t(:forgot_password)%></div>
    <div class="">
      <p><%= Spree.t(:instructions_to_reset_password) %></p>

      <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path do |f| %>
        <div class="login-tx registration-tx">
          <strong class="registration-tx">Email Address:</strong>
          <div class="input-group col-md-8 col-xs-12">      
            <%= f.email_field :email, :class => "form-control" %>
          </div>
        </div>
        <p>
          <%= f.submit Spree.t(:reset_password), :class => 'btn btn-hot-wish text-uppercase btn-lg' %>
        </p>
      <% end %>
    </div>
  </div>
  <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
  </div>
</div>
