<% @body_id = 'login' %>

<div class="ordr-smry">
  <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
    <div class="ordr-txt"><%= Spree.t(:login_as_existing) %></div>            
    <div class="">
      <div class="">
          <div id="existing-customer" class="panel-body" data-hook="login">
              <% if flash[:alert] %>
                <div class="alert alert-danger"><%= flash[:alert] %></div>
              <% end %>
              <%= render :partial => 'spree/shared/login' %>
              
              <div class="login-forgot">
                <p>OR</p>
                <p>
                  <%= link_to Spree.t(:create_a_new_account), spree.signup_path %> |
                  <%= link_to Spree.t(:forgot_password), spree.recover_password_path %>
                </p>
              </div>
              <div data-hook="login_extras"></div>
          </div>
      </div>
    </div>
  </div>
  <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
    <div class="ordr-txt">Advantages of Sign Up</div>
    <div class="advantages-login">
      <p>Manage your Orders<br>
        <span>Easily Track Orders, Hassle free Returns</span>
      </p>
      <p>Make Informed Decisions<br><span>Get Relevant Alerts and Recommendations</span></p>
      <p>Engage Socially<br><span>With wishlists, Reviews, Ratings</span></p>
    </div>
  </div>
</div>