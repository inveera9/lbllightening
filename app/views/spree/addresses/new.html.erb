<div class="col-md-4">
<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @address } %>
<%= form_for @address, :html => {:id => "checkout_form_address"} do |f| %>
<fieldset>
  <%= content_tag(:legend, t(:new_shipping_address, :scope => :address_book)) %>
  <div class="inner">
    <%= render :partial => 'spree/addresses/form', :locals => {
      :address_name => 'address',
      :address_form => f,
      :address_type => 'shipping',
      :address => @address
    } %>
  </div>
  <div class="pull-right">
    <%= f.submit "Save", :class=> "btn btn-hot text-uppercase btn-lg marginb10" %>
  </div>
</fieldset>
<% end %>
</div>